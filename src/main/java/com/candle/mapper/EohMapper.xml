<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.candle.mapper.EohMapper">
	<!-- 전체상품 조회 -->
	<select id="selectAll" resultType="com.candle.vo.ItemVO">
	select * 
	from candle_item
	</select>	
	
	<!-- 상세상품 조회 -->
	<select id="itemInfo" resultType="com.candle.vo.ItemVO" parameterType="String">
	select * 
	from candle_item	
	where item_no = #{itemNo}
	</select> 

	<insert id="orderInfo" parameterType="com.candle.vo.AddCartVO" >
    <selectKey keyProperty="orderNo" resultType="int" order="BEFORE">
      select max(order_no) + 1 from candle_order
    </selectKey>
	insert into candle_order (order_no, user_no, sysdate, order_status, item_no)
	values(#{orderNo}, #{userNo}, sysdate, 0, #{itemNo})
	</insert>
	
	<select id = "orderNo" resultType = "int" parameterType="int">
	select order_no
	from candle_oder 
	where order_status = 0 
	and user_no = #{userNo}
	</select>

</mapper>